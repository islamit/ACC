@model ACC.Models.Sales_Man

@{
    ViewBag.Title = "Create";
}

 


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="card-title text-center">@Resources.ACC.SalesMan </h1>
        <hr />
 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Sales_Man_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sales_Man_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sales_Man_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="card-footer">

            <input type="submit" id="submit"  value="@Resources.ACC.Save" class="btn btn-default pull-left " />

            <label id="processing" style="display:none;">Please wait...</label>
        </div>

     
    </div>
}

 



