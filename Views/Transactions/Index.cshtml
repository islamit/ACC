@model IEnumerable<ACC.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

    <div class="jumbotron">

        <h1 class="card-title text-center">@Resources.ACC.Transactions </h1>
        <hr />
        <div dir="rtl">
            <div class="form-group row">
                <div class="col-md-6">
                    @Html.ActionLink("ALL ", "Index", new { area = "", max_results = 1000000 }, new { @class = "btn btn btn-secondary btn-sm pull-right" })
                </div>
                <div class="col-md-6">
                    @Html.ActionLink(" ", "Create", new { area = "" }, new { @class = "btn btn-success btn-sm fa fa-plus pull-left" })
                </div>
            </div>
        </div>
        <hr />

        <table dir="rtl" id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Account.Account_Name)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Transaction_Types.Transaction_Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Transaction_Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Transaction_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>


                    <th></th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <h3>@Html.DisplayFor(modelItem => item.Account.Account_Name)</h3>

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Transaction_Types.Transaction_Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Transaction_Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Transaction_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("System") || User.IsInRole("Admin"))
                                {
                                    @Html.ActionLink("  ", "Details", new { id = item.PK_Transaction }, new { @class = "btn btn-default btn-sm fa fa-list" })  
                                    @Html.ActionLink(" ", "Delete", new { id = item.PK_Transaction }, new { @class = "btn btn-danger btn-sm fa fa-eraser" })

                                }
                            }




                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>

 
